<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/timg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/meaningbackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回主页面"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="#3d8dc4" />

        <TextView
            android:id="@+id/meaningListName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text=""
            android:gravity="right"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/l1"
        android:background="@drawable/meaning_word_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meaningWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:textColor="#888"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/l2"
        android:orientation="vertical">

        <Button
            android:id="@+id/meaning1"
            android:layout_width="240dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/meaning2"
            android:layout_width="240dp"
            android:layout_height="50dp"
            />

        <Button
            android:id="@+id/meaning3"
            android:layout_width="240dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/meaning4"
            android:layout_width="240dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_below="@+id/l3"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/meaningNext"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="#3d8dc4"
            android:text="下一个"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
             />
    </LinearLayout>
</RelativeLayout>
